{
    "title": "Change caps_lock to Esc and Control",
    "rules": [
      {
        "description": "Post Return if Return is tapped, Control if held.",
        "manipulators": [
          {
      "type": "basic",
      "from": {
          "key_code": "return_or_enter",
          "modifiers": {
              "optional": [
                  "any"
              ]
          }
      },
      "to": [
          {
              "key_code": "right_control",
              "lazy": true
          }
      ],
      "to_if_alone": [
          {
              "key_code": "return_or_enter"
          }
      ]
  }
        ]
      }
    ]
  }
